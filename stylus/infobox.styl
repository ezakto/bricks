/**
 * Infoboxes
 */

infobox_module = true

// Mixins

tintInfobox($class = false, $color = false)
    if $color
        border-color $color
    background-color lighten($color or @border-color, 90%)
    color darken($color or @border-color, 20%)

infobox()
    border 1px solid
    border-color $colorClasses[0][1]
    border-radius ($gapSize/2)
    box-shadow 0 0 3px rgba(0, 0, 0, 0.1)
    padding $gapSize
    margin $gapSize 0
    display block
    position relative
    
    &.fixed, &.absolute
        margin 0
        top 0
        left 0
        right 0
        border-width 0 0 1px
        border-radius 0
        text-align center
        box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
        z-index 100
        &.over
            opacity 0.9
    
    &.fixed
        position fixed
    
    &.absolute
        position absolute
    
    a.close
        position absolute
        top 3px
        right 8px
        font-weight bold
        color inherit
        opacity 0.5
        font-size 1.5em
        text-decoration none
        &:hover
            opacity 0.8
    
    tintInfobox()
    applyColors(tintInfobox)

// Default usage

.infobox
    infobox()

