// Clearfix helper. Duh.
clearfix()
    zoom 1
    &:before, &:after
        content ""
        display table
    &:after
        clear both

// Applies an iterator function with colors defined in $colorClasses
applyColors(function)
    for $pair in $colorClasses
        &.{$pair[0]}
            function($pair[0], $pair[1])

